{
    "compilerOptions": {
        "outDir": "./lib",
        "allowSyntheticDefaultImports": true,
        "allowUnreachableCode": false,
        "declaration": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "lib": [
            "dom",
            "es2015"
        ],
        "removeComments": false,
        "moduleResolution": "node",
        "module": "esnext",
        "target": "es6",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "skipLibCheck": true,
        "allowJs": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [
            "jest"
        ],
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}